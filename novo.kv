<Gerenciador>:
	Menu:
		name:'menu'
	Jogo:
		id:gerenciador
		name:'jogo'
	Quiz:
		name:'quiz'
<Menu>:
	on_enter:
		button1.state = 'normal'
		button2.state = 'normal'
		button3.state = 'normal'
	BoxLayout:
		orientation:'vertical'
		padding:100
		spacing:10
		canvas:
			Color:
				rgba: 128,128,128,1
			Rectangle:
				size:self.size
				pos:self.pos
		Image:
			source:'imagens/logo.png'
			size_hint: 1,1
			allow_stretch:True
		Botao:
			id:button1
			text:'Jogo da memória'
			on_release:app.root.current='jogo'
		Botao:
			id:button2
			text:'Quiz'
			on_release:app.root.current='quiz'
		Botao:
			id:button3
			text:'Informações'
			on_release:app.stop()

<Botao@ButtonBehavior+Label>:
	font_size: '20sp'
	size_hint: .9,.9
	pos_hint: {'center_x':.5,'center_y':.5}
	canvas.before:
		Color:
			rgba:0.30,0.14,0,1 #marrom 77/255,38/255,0,1 #azul 0.1,0.5,0.7,1
		Ellipse:
			pos:self.pos
			size:self.height,self.height
		Ellipse:
			pos:self.x+self.width-self.height,self.y
			size:self.height,self.height
		Rectangle:
			pos:self.x+self.height/2.0,self.y
			size:self.width-self.height,self.height
<Botaojogo@ButtonBehavior+Label>:
	font_size: '15sp'
	size_hint: .9,.9
	color:0,0,0
	pos_hint: {'center_x':.5,'center_y':.5}
	canvas.before:
		Color:
			rgba:1,1,1,1
		Ellipse:
			pos:self.pos
			size:self.height,self.height
		Ellipse:
			pos:self.x+self.width-self.height,self.y
			size:self.height,self.height
		Rectangle:
			pos:self.x+self.height/2.0,self.y
			size:self.width-self.height,self.height
<Botaojogoquadrado@ButtonBehavior+Label>:
	font_size: '20sp'
	size_hint: .5,.1
	pos_hint: {'center_x':.5,'center_y':.5}
	canvas.before:
		Color:
			rgba:0.33,0.17,0.01,1
		Rectangle:
			pos:self.x+self.height/2.0,self.y
			size:self.width-self.height,self.height
<Jogo>:

	BoxLayout:
		id:boxjogo
		pos_hint: {'top':1}
		orientation:'vertical'
		canvas:
			Color:
				rgba: 128,128,128,1
			Rectangle:
				size:self.size
				pos:self.pos
		ActionBar:
			pos_hint: {'top':1}  #na parte superior da tela'
			background_color: 0, 0, 0, 1
			ActionView:				
				ActionPrevious:
					app_icon: ''			
					title:'Voltar'
					on_release:root.previous_screen()
				ActionButton:
					id:action_iniciar
					text:'Recomeçar'	
					on_release:root.previous_screen_limpa()
					canvas.before:
						Color:
							rgba:0.33,0.17,0.01,1
						Rectangle:
							pos:self.pos
							size:self.size
				ActionButton:
					text:'Sair'	
					on_release:app.stop()

		ScrollView:
			GridLayout:
				id:gridlayout
				padding:10
				spacing:10
				cols:4
	BoxLayout:
		id:tbox
		orientation:'vertical'
		Label:			
			pos_hint: {'center_x':.5,'center_y':.5}
			font_size:'25sp'
			pos_hint: {'top':9}
			text: "[b]{}[/b]".format("Selecione a quantidade de imagens")
			markup: True
			color:0,0,0,1
		GridLayout:
			id:botaoiniciar
			pos_hint: {'top':.7}
			size_hint_y:None
			width:.9
			padding:15
			spacing:20
			orientation:'vertical'
			cols:3
			Botao:
				text:"4"
				size_hint:0.2,0.2
				on_release:root.addImagem(4),app.root.get_screen('jogo').remove_widget(app.root.get_screen('jogo').ids.tbox)		
			Botao:
				size_hint:0.2,0.2
				text:'6'
				on_release:root.addImagem(6),app.root.get_screen('jogo').remove_widget(app.root.get_screen('jogo').ids.tbox)
			Botao:
				size_hint:0.2,0.2
				text:'10'
				on_release:root.addImagem(10),app.root.get_screen('jogo').remove_widget(app.root.get_screen('jogo').ids.tbox)
<Quiz>:
	BoxLayout:		
		orientation:'vertical'	
		ActionBar:
			pos_hint: {'top':1}  #na parte superior da tela'
			background_color: 0, 0, 0, 1
			ActionView:				
				ActionPrevious:
					app_icon: ''			
					title:'Voltar'
					on_release:root.previous_screen()
				ActionButton:
					id:action_iniciar
					text:'Recomeçar'	
					on_release:root.previous_screen_limpa()
					canvas.before:
						Color:
							rgba:0.33,0.17,0.01,1
						Rectangle:
							pos:self.pos
							size:self.size
				ActionButton:
					text:'Sair'	
					on_release:app.stop()
		BoxLayout:
			orientation:'vertical'
			canvas:
				Color:
					rgb:1,1,1
				Rectangle:
					pos:self.pos
					size:self.size
					source:'imagens/obras.jpg'
<ImagemBloco>:
	text:''
	ImageButton:
		id:button
		text:''
		source: 'imagens/pergunta.png'
		on_release:root.troca(str(self.text))#root.conta(str(self.text))
	



