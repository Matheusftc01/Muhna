<ImageButton>:
	id:button
	text:''
	source: 'imagens/pergunta.png'
	on_press:
	on_release:root.troca(str(self.text))#root.conta(str(self.text))

<Pronto>:
	BoxLayout:
		id:principal
		orientation:'vertical'
		BoxLayout:
			id:primaria
			orientation:'horizontal'
			
			pos_hint:{'x':1}#max em cima em x
			pos_hint:{'y':1}#max em cima em y
			size_hint:[1,.08]#max em x e 8% em y
			
			canvas:
				Color:
					rgba:1,1,1,1
				Rectangle:
					pos:self.pos
					size:self.size
			
			ActionBar:
				pos_hint: {'top':1}  #na parte superior da tela'
				background_color: 0, 0, 0, 1
				size:self.size
				ActionView:				
					ActionPrevious:
						app_icon: ''			
						title:'Voltar'
						on_release:root.previous_screen()
					ActionButton:
						id:action_iniciar
						text:'Recomeçar'	
						on_release:root.previous_screen_limpa()
						canvas.before:
							Color:
								rgba:0.33,0.17,0.01,1
							Rectangle:
								pos:self.pos
								size:self.size
		GridLayout:
			id:gridlayout
			padding:10
			spacing:10
			cols:4
								
<Teste>:
	BoxLayout:
		id:principal
		orientation:'vertical'
		BoxLayout:
			id:primaria
			orientation:'horizontal'
			
			pos_hint:{'x':1}#max em x
			pos_hint:{'y':1}#10% em y
			size_hint:[1,.08]#max em x e 8% em y
			
			canvas:
				Color:
					rgba:1,1,1,1
				Rectangle:
					pos:self.pos
					size:self.size
			
			ActionBar:
				pos_hint: {'top':1}  #na parte superior da tela'
				background_color: 0, 0, 0, 1
				size:self.size
				ActionView:				
					ActionPrevious:
						app_icon: ''			
						title:'Voltar'
						on_release:root.previous_screen()
					ActionButton:
						id:action_iniciar
						text:'Recomeçar'	
						on_release:root.previous_screen_limpa()
						canvas.before:
							Color:
								rgba:0.33,0.17,0.01,1
							Rectangle:
								pos:self.pos
								size:self.size
		
			
		BoxLayout:
			id:secundaria
			orientation:'vertical'
			canvas:
				Color:
					rgba:0,0,1,1
				Rectangle:
					pos:self.pos
					size:self.size
			
			BoxLayout:
				orientation:'horizontal'
				MyLabel:	
					text:" "
			BoxLayout:
				id:gridlayout
				orientation:'horizontal'
				GridLayout:
					id:botaoiniciar
					orientation:'horizontal'
					pos_hint: {'x':.1}
					size_hint_y:None
					padding:15
					spacing:20
					cols:3
					Botao:
						text:"4"
						size_hint:0.2,0.2
						on_release:root.addImagem(4)		
					Botao:
						size_hint:0.2,0.2
						text:'6'
						on_release:
							root.addImagem(6)
							app.root.get_screen('teste').remove_widget(app.root.get_screen('teste').ids.principal)
					Botao:
						size_hint:0.2,0.2
						text:'10'
						on_release:
							root.addImagem(10)
							app.root.get_screen('teste').remove_widget(app.root.get_screen('jogo').ids.secundaria)		
			ScrollView:
				GridLayout:
					id:gridlayout
					padding:10
					spacing:10
					cols:4	

<BotaoRounded@ButtonBehavior+LabelBotao>:
	pos_hint: {'center_x':.5,'center_y':.5}

	canvas.before:
		Color:
			rgba: 0.30,0.14,0,.8
		RoundedRectangle:
			pos: self.pos
			size: self.size
			radius: [25,25]

<Inserenome>:
	BoxLayout:
		canvas.before:
			Color:
				rgba: 1,1,1,.8#0.30,0.14,0,1
			RoundedRectangle:
				pos: self.pos
				size: self.size
				radius: [50,]
		TextInput:
			id:texinp
			size_hint:[.8,.8]
			hint_text: 'Escreva seu nome'
			font_size: '14dp'
			background_color: 1,1,0,0
			input_filter:lambda text, from_undo: text[:20 - len(self.text)]
	BoxLayout:

		size_hint:[.2,1]
		BotaoRounded:
			spacing:'40dp'
			text:'Salvar'
			on_release:root.salvanome()

<Ranking>:
    BoxLayout:
        orientation:'vertical'
        canvas.before:
			Color:
				rgba:1,1,1,1
			Rectangle:
				pos:self.pos
				size:self.size
		ActionBar:
			pos_hint: {'top':1}  #na parte superior da tela'
			background_color:0,0,0,1
			size:self.size
			ActionView:				
				ActionPrevious:
					app_icon: ''			
					title:'Voltar'
					on_release:root.previous_screen_limpa()
				ActionButton:
					id:action
					text:'Atualizar placar'	
					on_release:root.teste()
					cor : 0.33,0.17,0.01,1
					canvas.before:
						Color:
							rgba:self.cor
						Rectangle:
							pos:self.pos
							size:self.size
					
        BoxLayout:
        	orientation:'horizontal'
        	size_hint:1,.1
        	canvas.before:
				Color:
					rgba:0.30,0.14,0,.9#25/255, 123/255, 98/255,1
				Rectangle:
					pos:self.pos
					size:self.size
        	LabelBotao:
        		color:1,1,1,1
        		text:'N°'
        	LabelBotao:
        		color:1,1,1,1
        		text:'Nome'
        	LabelBotao:
        		color:1,1,1,1
        		text:'Pontos'
        	LabelBotao:
        		color:1,1,1,1
        		text:'Erros'
        	LabelBotao:
        		color:1,1,1,1
        		text:'Tempo'
        ScrollView:
            BoxLayout:
                id:box
                orientation:'vertical'
                size_hint_y:None
                height:self.minimum_height

<BoxLayoutCustom>:
	orientation:'horizontal'
	size_hint_y:None
	height:dp(50)
	cor:0.4,0.2,0.1,.8
	canvas:
		Color:
			rgba:self.cor
		Rectangle:
			pos:self.pos
			size:self.size

<Tarefa>:
	orientation:'horizontal'
    size_hint_y:None
    height:dp(50)
    LabelBotao:
        id:label
        color:0,0,0,1
        font_size:dp(20)

				